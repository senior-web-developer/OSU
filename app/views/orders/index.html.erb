  <% content_for :javascript do %>
    <script type="text/javascript">
      ShopifyApp.ready(function(){
        ShopifyApp.Bar.initialize({ title: "Orders" });
      });
    </script>
  <% end %>
<div class='col-lg-12' style="margin-bottom:20px;">
<span class='h1 text-left' style="display:inline !important;">Orders</span>
<span class='text-right go-back'><%= link_to '', home_index_path, :class => 'glyphicon glyphicon-circle-arrow-left font-size', :title => 'Go Back' %></span>
</div>
   
<div class="table-responsive"  style="margin-bottom:50px;">
<table id="row-expand" class="table table-striped" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>Order</th>
            <th>Date</th>
            <th>Customer</th>
            <th>Payment Status</th>
            <th>Fulfillment Status</th>
            <th>Total</th>
            <th class="none">Product ID</th>
            <th class="none">Product Name</th>
            <th class="none">SKU</th>
            <th class="none"></th>
            <th class="none"></th>
            <th class="none"></th>                       
        </tr>
    </thead>
    <tbody class='myTable'>
      <% @orders.each do |order| %>        
        <tr>
          <td><%= order.name %></td>
          <td><%= order.created_at %></td>
          <td><%= order.customer.first_name+" "+order.customer.last_name %></td>
          <td><%= order.financial_status %></td>
          <!--<td><% if order.fulfillment_status %>
             <%= order.fulfillment_status %>
             <% else %>
             Unfulfilled
             <% end %>
          </td>-->
          <td>
          <select>
            <% for value in order.fulfillment_status %>
                <option><% if order.fulfillment_status == true %>selected<% endif %>
                Unfullfilled
                </option>
                <option><% if order.fulfillment_status == true %>selected<% endif %>
                Partial
                </option>
                <option><% if order.fulfillment_status%>selected<% endif %>
                Fulfilled
                </option>
            <% endfor %>
            </select>
          </td>              
          <td><%= order.total_price %></td>         
          <td id='order_date'>
          <span class="glyphicon glyphicon-info-sign"></span>               
          </td> 
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>                           
        </tr>
      <% end %>
    </tbody>
</table>
</div>

<script>  
    $(document).ready(function (){
        var table = $("#row-expand").DataTable({
            "responsive": true
        });        
    });
</script> 
  
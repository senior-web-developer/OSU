
<div class="container" style="margin-top:30pt;">
<div class="panel panel-default">
  <div class="panel-heading home_header">
    <h1 class="h3 text-center"><%= @title %></h1>
  </div>
  <div class="panel-body text-center">
    <form action='' method='post'>
      <div class="radio-inline">
      <h2 class="h4">Select your order type:</h2>
      </div>
      <div class="radio-inline" style="margin-top: 10px;">
      <p data-toggle="modal" data-target="#myModal">
          <span class="glyphicon glyphicon-search"></span> <a title="Search your order number"><%= 'By Order Number' %></a>
      </p>
      </div>
      <div class="radio-inline" style="margin-top: 10px;">          
        <p><span class="glyphicon glyphicon-eye-open"></span> <%= link_to 'View All Orders', orders_all_orders_path, :title => 'Click Here to view all orders' %></p>            
      </div>        
    </form>
  </div>
</div>
</div>

<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog modal-lg text-center">
    <div class="modal-content">
      <div class="modal-header home_header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">By Order Number</h4>
      </div>
      <div class="modal-body">
      <div class="row">
      <form action='' method=''>
        <div class='col-sm-6 col-md-10 col-lg-8'><input type="text" class="form-control"  placeholder='Search your order' /></div>
        <div class="col-sm-1 col-md-2 col-lg-2 btn-top">
        <button class="btn btn-default" type='submit'  name="check" />
        <span class="glyphicon glyphicon-search"></span>&nbsp; CHECK
        </button>
        </div>
        </form>
        </div>
      </div>       
    </div>
  </div>
</div>




<% content_for :javascript do %>
  <script type="text/javascript">
    ShopifyApp.ready(function(){
      ShopifyApp.Bar.initialize({ title: "Home" });
    });
</script>
<% end %>
<%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" %>
<div class='container'>
<div class='row'>
<div class='col-lg-12'>
<span class='h1 text-left' style="display:inlien !important;">Orders</span><span class='text-right go-back'><%= link_to '', home_index_path, :class => 'glyphicon glyphicon-circle-arrow-left font-size', :title => 'Go Back' %></span>
</div>
<div class='search-bar'>
<input class="form-control" id="myInput" type="text" placeholder="Search..">
</div>
<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Order</th>
      <th>Date</th>
      <th>Customer</th>
      <th>Payment Status</th>
      <th>Fulfillment Status</th>
      <th>Total Order</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="myTable">
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.created_at %></td>
        <td><%= order.customer.first_name+" "+order.customer.last_name %></td>
        <td><%= order.financial_status %></td>
        <td><% if order.fulfillment_status %>
           <%= order.fulfillment_status %>
           <% else %>
           Unfulfilled
           <% end %></td>  
      <td><%= order.customer.orders_count %></td>    
      <td><%= order.total_price %></td>        
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>


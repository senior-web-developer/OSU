<% content_for :javascript do %>
  <script type="text/javascript">
    ShopifyApp.ready(function(){
      ShopifyApp.Bar.initialize({ title: "Home" });
    });
</script>
<% end %>
<%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" %>
<div class='container'>
<div class='row'>

<div class="text-center" style="margin-top:5%;">
<a href="/orders/index" title="Click Here" class="btn btn-primary">
<h2 style="color:#fff;">ORDER STATUS UPDATE</h2>
<p style="color:#fff;">Welcome To Shopify Application</p>
</a>
</div>
<h2>Products</h2>

<ul>
  <% @orders.each do |order| %>
    <li><%= link_to order.id, "https://#{@shop_session.url}/admin/orders/#{order.id}", target: "_top" %></li>
  <% end %>
</ul>
<hr>

<h2>Products</h2>

<ul>
  <% @products.each do |product| %>
    <li><%= link_to product.title, "https://#{@shop_session.url}/admin/products/#{product.id}", target: "_top" %></li>
  <% end %>
</ul>
<hr>
<h2>Webhooks</h2>

<% if @webhooks.present? %>
  <ul>
    <% @webhooks.each do |webhook| %>
      <li><%= webhook.topic %> : <%= webhook.address %></li>
    <% end %>
  </ul>
<% else %>
  <p>This app has not created any webhooks for this Shop. Add webhooks to your ShopifyApp initializer if you need webhooks</p>
<% end %>
</div>
</div>

<% content_for :javascript do %>
  <script type="text/javascript">
    ShopifyApp.ready(function(){
      ShopifyApp.Bar.initialize({ title: "Home" });
    });
</script>
<% end %>
<%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" %>
<div class='container'>
<div class='row'>

<div class="text-center" style="margin-top:5%;">
<a href="/orders/index" title="Click Here" class="btn btn-primary">
<h2 style="color:#fff;">ORDER STATUS UPDATE</h2>
<p style="color:#fff;">Welcome To Shopify Application</p>
</a>
</div>
<h2>Orders</h2>

<ul>
  <% @orders.each do |order| %>
    <li><%= link_to order.name, "https://#{@shop_session.url}/admin/orders/#{order.name}", target: "_top" %></li>
  <% end %>
</ul>
<hr>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Email</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Shopify order</th>
      <th>Order date</th>
      <th>Total</th>
      <th>Line item count</th>
      <th>Financial status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.email %></td>
        <td><%= order.first_name %></td>
        <td><%= order.last_name %></td>
        <td><%= order.shopify_order_id %></td>
        <td><%= order.order_date %></td>
        <td><%= order.total %></td>
        <td><%= order.line_item_count %></td>
        <td><%= order.financial_status %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
